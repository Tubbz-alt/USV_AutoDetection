function control = parameter__control__create(parameter, context)

% XBAT2RAVEN_V33 - parameter__control__create

control = empty(control_create);

% 
% tabs = {'Choose Log Fields to add to Selection Table'};
% 
% control(end + 1) = control_create( ...
% 	'style', 'tabs', ...
% 	'tab', tabs ...
% );


% OUTPUT separator
control(end + 1) = control_create( ...
'string','Choose Log Fields to add to Selection Table', ...
'style','separator', ...
'type','header', ...
'space', 0.75 ...
);

% Use XBAT notes CHECKBOX
control(end + 1) = control_create( ...
    'name', 'notes_flag', ...
    'alias', 'Event notes', ...
    'style', 'checkbox', ...
    'value', parameter.notes_flag ...
    );

% Use XBAT tags CHECKBOX
control(end + 1) = control_create( ...
    'name', 'tags_flag', ...
    'alias', 'Event tags', ...
    'style', 'checkbox', ...
    'value', parameter.tags_flag ...
    );

% Use XBAT ratings CHECKBOX
control(end + 1) = control_create( ...
    'name', 'ratings_flag', ...
    'alias', 'Event ratings', ...
    'style', 'checkbox', ...
    'value', parameter.ratings_flag ...
    );

% Use XBAT scores CHECKBOX
control(end + 1) = control_create( ...
    'name', 'scores_flag', ...
    'alias', 'Event scores', ...
    'style', 'checkbox', ...
    'value', parameter.scores_flag ...
    );

% Add filetime column CHECKBOX
control(end + 1) = control_create( ...
    'name', 'filetime_flag', ...
    'alias', 'Event offset times from beginning of sound file', ...
    'style', 'checkbox', ...
    'value', parameter.filetime_flag ...
    );

% Add real time CHECKBOX
control(end + 1) = control_create( ...
    'name', 'realtime_flag', ...
    'alias','Real times of events', ...
    'style', 'checkbox', ...
    'value', parameter.realtime_flag ...
    );

% Choose  real time format POPUP
control(end + 1) = control_create( ...
    'name', 'realtime_format_out', ...
    'alias', 'Select real time format to be used in selection tables', ...
    'style', 'popup', ...
    'onload', 1, ...
	'space', 0.75, ...
	'string', {'HH:MM:SS' ...
              'HH:MM:SS.FFF' ...
              'HHMMSSmFFF'}, ...
    'value', 1 ...
    );

% Add real date CHECKBOX
control(end + 1) = control_create( ...
    'name', 'realdate_flag', ...
    'alias','Real dates of events', ...
    'style', 'checkbox', ...
    'value', parameter.realdate_flag ...
    );

% Choose  real date format POPUP
control(end + 1) = control_create( ...
    'name', 'realdate_format_out', ...
    'alias', 'Select real date format to be used in selection tables', ...
    'style', 'popup', ...
    'onload', 1, ...
	'space', 0.75, ...
	'string', {'yyyymmdd' ...
              'mm/dd/yyyy' ...
              'mm-dd-yyyy'}, ...
    'value', 1 ...
    );

% Add date and time columns 
control(end + 1) = control_create( ...
    'name', 'datetime_flag', ...
    'alias','Real datetimes of events', ...
    'style', 'checkbox', ...
    'value', parameter.datetime_flag ...
    );

% Choose datetime format POPUP
control(end + 1) = control_create( ...
    'name', 'datetime_format_out', ...
    'alias', 'Select datetime format to be used in selection tables', ...
    'style', 'popup', ...
    'onload', 1, ...
	'space', 0.75, ...
	'string', {'yyyymmdd_HHMMSS' ...
             'yyyymmdd_HHMMSS.FFF' ...
             'yyyymmdd_HHMMSSmFFF' ...
             'yyyymmddTHHMMSS' ...
             'yyyymmddTHHMMSS.FFF'...
             'yyyymmddTHHMMSSmFFF'...
             'mm-dd-yyyy HH:MM:SS.FFF'}, ...
    'value', 1, ...
     'space', 2 ...
    );


